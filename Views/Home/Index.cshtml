<html xmlns="http://www.w3.org/1999/xhtml" ng-app="MyApp">
<head>
    <title></title>
</head>
<body ng-controller="homeController as controller">

    <h1>Day6 Angular</h1>

    @* gets the message field inside of homeController *@
    <h3>{{controller.message}}</h3>

    <h1>List of Friends</h1>
    <ul>
        @* ng-repeat interates thru an array while creating the element it's in *@
        <li ng-repeat="friend in controller.friends">{{friend}}</li>
    </ul>

    <h1>List of products</h1>
    <ul>
        <li ng-repeat="product in controller.products">
            Item name: {{product.name}}, Price = {{product.price|currency}}
        </li>
    </ul>



    <script src="~/lib/angular/angular.js"></script>
    <script src="~/ngapp/app.js"></script>
    <script src="~/ngapp/controllers/homecontroller.js"></script>
</body>
</html>